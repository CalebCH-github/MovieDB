<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightblue">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/darkblue"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        app:cardMaxElevation="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lbl_releasedate_popular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Releasedate"
                android:textColor="@color/gold"
                app:layout_constraintEnd_toEndOf="@+id/lbl_overview_popular"
                app:layout_constraintStart_toStartOf="@+id/lbl_overview_popular"
                app:layout_constraintTop_toBottomOf="@+id/lbl_overview_popular" />

            <TextView
                android:id="@+id/lbl_overview_popular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Overview"
                android:textColor="@color/gold"
                app:layout_constraintEnd_toEndOf="@+id/lbl_title_popular"
                app:layout_constraintStart_toStartOf="@+id/lbl_title_popular"
                app:layout_constraintTop_toBottomOf="@+id/lbl_title_popular" />

            <TextView
                android:id="@+id/lbl_title_popular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Title"
                android:textColor="@color/gold"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/poster_film_popular"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/poster_film_popular"
                android:layout_width="108dp"
                android:layout_height="136dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_image_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>